{
  "name": "xtiles-snap",
  "version": "1.0.4",
  "description": "xTiles application for Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "snap": "electron-builder --linux snap",
    "deb": "electron-builder --linux deb"
  },
  "build": {
    "productName": "xTiles",
    "appId": "com.xtiles.snap",
    "linux": {
      "target": [
        {
          "target": "snap",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "summary": "xTiles application for Linux",
      "description": "Unofficial xTiles application for Linux"
    }
  },
  "keywords": [
    "xtiles",
    "electron",
    "linux",
    "deb",
    "snap",
    "snapcraft"
  ],
  "author": {
    "name": "Andre Carbajal Vargas",
    "email": "carbajalvargasandre@gmail.com"
  },
  "homepage": "https://github.com/andre-carbajal/xtiles-snap",
  "bugs": {
    "url": "https://github.com/andre-carbajal/xtiles-snap/issues"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.8.1"
  }
}
